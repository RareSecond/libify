# Application
APP_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:6543"
NODE_ENV="development"
PORT="3000"

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/spotlib"

# Redis Configuration (for BullMQ)
# Option 1: Use REDIS_URL for managed Redis services (takes precedence)
# REDIS_URL="redis://username:password@host:6379"
# REDIS_URL="rediss://username:password@host:6380" # for TLS
# Option 2: Use individual config values for local development
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"
REDIS_TLS="false"
REDIS_TLS_REJECT_UNAUTHORIZED="true"

# JWT Configuration
JWT_EXPIRES_IN="24h"
JWT_SECRET="your-super-secure-jwt-secret-that-is-at-least-32-characters-long-with-good-entropy-123456789"

# Encryption Configuration
# Generate using: openssl rand -hex 32
ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# Spotify OAuth
SPOTIFY_CLIENT_ID="your-spotify-client-id"
SPOTIFY_CLIENT_SECRET="your-spotify-client-secret"
SPOTIFY_REDIRECT_URI="http://localhost:3000/auth/spotify/callback"

# Worker Configuration (optional)
SYNC_WORKER_CONCURRENCY="2"

# Last.fm API (for genre enrichment)
LASTFM_API_KEY="your_lastfm_api_key_here"